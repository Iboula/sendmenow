{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "dockerfile",
    "dockerfilePath": "sendmenow/Dockerfile",
    "buildContext": "sendmenow",
    "watchPatterns": [
      "src/**",
      "public/**",
      "package*.json",
      "nginx.conf",
      "Dockerfile"
    ]
  },
  "deploy": {
    "startCommand": "nginx -g 'daemon off;'",
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
