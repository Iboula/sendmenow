{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "dockerfile",
    "dockerfilePath": "sendmenow/Dockerfile",
    "buildContext": "sendmenow"
  },
  "deploy": {
    "startCommand": "nginx -g 'daemon off;'",
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
